import kotlinx.datetime.LocalDateTime;

CREATE TABLE taskItem (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    details TEXT NOT NULL,
    isComplete INTEGER AS Boolean NOT NULL,
    date TEXT AS LocalDateTime NOT NULL
);

CREATE INDEX task_id ON taskItem(id);

selectAll:
SELECT *
FROM taskItem;

insert:
INSERT OR REPLACE INTO taskItem(id, title, details, isComplete, date)
VALUES (?, ?, ?, ?, ?);

delete:
DELETE FROM taskItem WHERE id = ?;