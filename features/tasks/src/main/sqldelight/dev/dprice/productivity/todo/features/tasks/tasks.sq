import kotlinx.datetime.LocalDateTime;

CREATE TABLE task (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    details TEXT NOT NULL,
    isComplete INTEGER AS Boolean NOT NULL,
    date TEXT AS LocalDateTime NOT NULL
);

CREATE INDEX task_id ON task(id);

selectAll:
SELECT *
FROM task;

insert:
INSERT OR REPLACE INTO task(id, title, details, isComplete, date)
VALUES (?, ?, ?, ?, ?);

delete:
DELETE FROM task WHERE id = ?;