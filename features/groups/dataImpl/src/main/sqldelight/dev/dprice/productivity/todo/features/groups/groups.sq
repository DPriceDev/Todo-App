import dev.dprice.productivity.todo.features.groups.data.model.Colour;
import dev.dprice.productivity.todo.features.groups.data.model.Icon;

CREATE TABLE groupItem (
    id TEXT NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    colour TEXT AS Colour NOT NULL,
    icon TEXT AS Icon NOT NULL,
    isDeleted INTEGER AS Boolean NOT NULL DEFAULT 0
);

CREATE INDEX group_id ON groupItem(id);

selectAll:
SELECT *
FROM groupItem;

updateIsDeleted:
UPDATE groupItem
SET isDeleted = ?
WHERE id = ?;

insert:
INSERT OR REPLACE INTO groupItem(id, title, colour, icon, isDeleted)
VALUES (?, ?, ?, ?, ?);

delete:
DELETE FROM groupItem WHERE id = ?;